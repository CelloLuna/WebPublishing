<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) { %>
      <div class="alert alert-dismissible fade show alert-<%- message.type %>">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <h2>Products</h2>
      <div class="table-responsive">
        <% if (products != '') { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Image</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((row, index) => { %>
            <tr>
              <td><%= index %></td>
              <td><%= row.name %></td>
              <td>$<%= row.price %></td>
              <td><%= row.qty %></td>
              <td><img src="<%= row.image %>" width="50" class="img-thumbnail" /></td>
              <td>
                <a href="/editProduct/<%= row.id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                <a href="/deleteProduct/<%= row.id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No Products to Display</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
