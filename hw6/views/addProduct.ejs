<%- include('./layouts/header.ejs') %>
<div class="row">
  <div class="col-lg-6 mx-auto mt-4">
    <div class="card shadow">
      <div class="card-header bg-primary">
        <h3 class="text-light">Add New Product</h3>
      </div>
      <div class="card-body p-4">
        <div>
          <form action="/addProduct" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name">Product Name</label>
              <input
                type="text"
                name="name"
                class="form-control form-control-lg"
                placeholder="Enter Product Name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="price">Price</label>
              <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter Price" required />
            </div>
            <div class="mb-3">
              <label for="qty">Quantity</label>
              <input
                type="text"
                name="qty"
                class="form-control form-control-lg"
                placeholder="Enter Quantity"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select Product Image</label>
              <input name="image" class="form-control form-control-lg" type="file" required />
            </div>
            <div class="mb-3 d-grid">
              <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg" />
            </div>
          </form>
          <div class="mb-3 d-grid">
            <a href="/viewProducts" type="button" value="Cancel" class="btn btn-warning btn-lg">Cancel</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('./layouts/footer.ejs') %>
