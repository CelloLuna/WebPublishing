<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <div class="container">
      <h4>Staff Detail</h4>
      <div>
        <h5>Staff ID: <%= staff.staff_ID %></h5>
        <h5>Staff Name: <%= staff.fname %> <%= staff.lname %></h5>
        <h5>Staff Contact: <%= staff.contact %></h5>
        <h5>Staff Address: <%= staff.address %></h5>
        <h5>Staff Gender: <%= staff.gender %></h5>
      </div>
      <a id="deleteBtn" class="delete btn" data-id="<%= staff._id %>">Delete</a>
    </div>
    <script>
      deleteBtn.onclick = function (e) {
        e.preventDefault();
        const id = e.target.getAttribute("data-id");

        const endpoint = `/staff/${id}`;
        fetch(endpoint, {
          method: "DELETE",
        })
          .then((res) => res.json())
          .then((data) => {
            console.log("data", data);
            window.location.href = data.redirect;
          })
          .catch((err) => console.log(err));
      };
    </script>
  </body>
</html>
