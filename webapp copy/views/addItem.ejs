<!doctype html>
<html lang="en">

<head>
  <title>Add Item</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

</head>

<body>
    <nav>
        <div class="nav-wrapper container">
            <a href="/" class="brand-logo">CRUD APP</a>
            <ul uid="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/add-item">Add Item</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="input-field col-sm-6">
                <i class="material-icons prefix">shopping_cart</i>
                <input id="item_name" type="text" class="validate" name="name">
                <label for="item_name">Item Name</label>
            </div>
            <div class="input-field col-sm-6">
                <i class="material-icons prefix">attach_money</i>
                <input id="item_price" type="text" class="validate" name="name">
                <label for="item_price">Price</label>
            </div>
        </div>
        <button class="btn">Add Item</button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
