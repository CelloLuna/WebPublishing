<%- include('./layout/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-success">
          <h3 class="text-light">Edit User: <%= user.name %></h3>
        </div>
        <div class="card-body p-4">
          <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-contol form-contol-lg"
                placeholder="Enter Name"
                value="<%= user.name %>"
              />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="text"
                name="email"
                class="form-contol form-contol-lg"
                placeholder="Enter Email"
                value="<%= user.email %>"
              />
            </div>
            <div class="mb-3">
              <label for="phone">Phone</label>
              <input
                type="text"
                name="phone"
                class="form-contol form-contol-lg"
                placeholder="Enter Phone Nunber"
                value="<%= user.phone %>"
              />
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select Image</label>
              <input type="file" name="image" class="form-contol form-contol-lg" />
              <img src="/<%= user.image %>" alt="user image" width="200" class="img-thumbnail mt-1" />
            </div>
            <input type="hidden" name="old_image" value="<%= user.image %>" />
            <div class="mb-3 d-grid">
              <input type="submit" value="Update User" name="submit" class="btn btn-success btn-lg" />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./layout/footer.ejs') %>
